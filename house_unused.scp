elif (<ref2.GetBanPos <ref1>> >= 0 || <ref2.GetAccessPos <ref1>> >= 0)
else
	ref2.more2 ++
	ref2.tag.visitor_<ref1>
	serv.newitem=i_mem_hsvisitor
	new.more2=<ref1>
	new.link=<ref2>
	new.p=<ref2.p>
