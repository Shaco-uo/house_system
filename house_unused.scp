[FUNCTION f_house_visitor_count]
ref1=<uid>
ref2=<region.uid>
if !(<ref2.isvalid>)
elif (<ref2.housetype>!=<def.house_public>)
elif !(<isempty <ref2.tag.visitor_<ref1>>>)
elif (<ref2.isowner <ref1>> || <ref1.isgm>)
